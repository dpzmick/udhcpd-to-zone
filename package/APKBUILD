pkgname="udhcpd-to-zone"
pkgver="1"
pkgrel=0
pkgdesc="Convert udhcpd leases file to partial zone descriptions"
url="https://gitlab.com/dpzmick/udhcpd-to-zone"
arch="all"
license="MIT"
depends=""
makedepends="build-base"
install=""
subpackages=""
source="https://gitlab.com/dpzmick/$pkgname/-/archive/$pkgver/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver/"
options="!check"

build() {
	make
}

package() {
	mkdir -p $pkgdir/bin
	install $pkgname $pkgdir/bin/$pkgname
}

